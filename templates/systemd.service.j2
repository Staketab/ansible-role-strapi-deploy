[Unit]
Description=Python Strapi Proxy service
After=network.target

[Service]
Type=simple
User={{ deployment_user }}
Group={{ deployment_group }}
EnvironmentFile={{ deployment_workdir }}/config.ini
WorkingDirectory={{ deployment_workdir }}
ExecStart=/usr/bin/python {{ deployment_workdir }}/{{ deployment_app_name }}
Restart=on-failure
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
